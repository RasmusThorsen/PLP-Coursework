<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="UI.Controllers.UserInputController"
      prefHeight="200.0" prefWidth="100.0" >

    <children>
        <TextArea fx:id="inputText" style="-fx-background-radius: 0;" VBox.vgrow="SOMETIMES"/>
        <Button fx:id="btnDraw"
                onAction="#handleBtnDrawClick"
                mnemonicParsing="false"
                prefWidth="180.0"
                text="Draw">
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>